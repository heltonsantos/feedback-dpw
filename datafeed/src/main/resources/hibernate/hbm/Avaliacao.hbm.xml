<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
 
<hibernate-mapping>
    <class name="com.br.datafeed.model.Avaliacao" table="avaliacao">
        
        <id name="id" type="integer">
            <column name="ID" />
            <generator class="identity" />
        </id>
        
       <property name="data_avaliacao" type="date">
       		<column name="DATA_AVALIACAO" not-null="true"/>
       </property>
       
       <property name="nome_usuario" type="string">
       		<column name="NOME_USUARIO" not-null="true"/>
       </property>
       
       <property name="email_usuario" type="string">
       		<column name="EMAIL_USUARIO" not-null="true" unique="true"/>
       </property>
        
       <property name="comentario" type="string">
       		<column name="COMENTARIO"/>
       </property>
       
       <property name="avaliacao" type="double">
            <column name="AVALIACAO" default="0" not-null="true"/>
        </property>
		
		<many-to-one name="feedback" class="com.br.datafeed.model.Feedback" fetch="join" column="FEEDBACK_ID" lazy="false"/>
    
    </class>
</hibernate-mapping>